function addClass(t,s){t.classList?t.classList.add(s):t.className+=" "+s}
function removeClass(t,s){t.classList?t.classList.remove(s):t.className=t.className.replace(new RegExp("(^|\\b)"+s.split(" ").join("|")+"(\\b|$)","gi")," ")}

